<h1>Listing rules</h1>

<table>
  <tr>
    <th>Keyword</th>
    <th>Technicalnote</th>
    <th>Businessnote</th>
    <th></th>
  </tr>

<% @rules.each do |rule| %>
  <tr>
    <td><%= rule.expression %></td>
    <td><%= rule.technicalnote %></td>
    <td><%= rule.businessnote %></td>
    <td><%= link_to 'Show', rule %></td>
    <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
    <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Rule', new_rule_path %>
